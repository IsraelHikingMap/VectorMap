{
  "version": 8,
  "name":"Parks and Reserves",
  "metadata": {
    "owner": "Zeev Stadler",
    "copyright": "Copyright Zeev Stadler 2024. All Rights Reserved."
  },
  "sources": {
    "IHM": {
      "type": "vector",
      "url": "https://israelhiking.osm.org.il/vector/data/IHM.json"
    }
  },
  "sprite": "https://israelhikingmap.github.io/VectorMap/Icons/publish/sprite",
  "glyphs": "https://orangemug.github.io/font-glyphs/glyphs/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "park-fill",
      "type": "fill",
      "source": "IHM",
      "source-layer": "park",
      "minzoom": 9,
      "filter": [
        "all",
        ["==", "$type", "Polygon"],
        ["in", "class", "national_park", "nature_reserve"]
      ],
      "paint": {"fill-color": "#709D56", "fill-opacity": 0.5}
    },
    {
      "id": "park-name",
      "type": "symbol",
      "metadata": {"IHM:overlay": false},
      "source": "IHM",
      "source-layer": "park",
      "minzoom": 9,
      "filter": [
        "all",
        ["==", "$type", "Point"],
        ["in", "class", "national_park", "nature_reserve"]
      ],
      "layout": {
        "text-field": [
          "coalesce",
          ["get", "name:he"],
          ["get", "name:en"],
          ["get", "name"]
        ],
        "text-size": 18,
        "text-font": ["Open Sans Cond Bold"],
        "text-max-width": 5
      },
      "paint": {
        "text-color": "#709D56",
        "text-halo-color": "white",
        "text-halo-width": 3,
        "text-halo-blur": 1.5
      }
    }
  ],
  "id": "Park"
}
